{
  "name": "molthub",
  "version": "0.1.0",
  "private": true,
  "description": "Molthub - AI Cost Control and Migration Platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@molthub/web && changeset publish",
    "db:migrate": "cd packages/api && npx prisma migrate deploy",
    "db:generate": "cd packages/api && npx prisma generate",
    "db:seed": "cd packages/api && npx tsx prisma/seed.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "infra:plan": "cd infra/terraform && terraform plan",
    "infra:apply": "cd infra/terraform && terraform apply",
    "health:check": "node scripts/health-check.js",
    "dev:setup": "./scripts/dev-setup.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomer-shavit/molthub.git"
  },
  "author": "Tomer Shavit <tomer@molthub.ai>",
  "license": "MIT"
}
